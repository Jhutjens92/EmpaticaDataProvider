<Window
    x:Class="EmpaticaDataProvider.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EmpaticaDataProvider"
    Width="450"
    Height="420"
    DataContext="{StaticResource MainWindowViewModel}"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="b2v" />
    </Window.Resources>
    <Grid
        Width="450"
        Height="420"
        HorizontalAlignment="Left"
        VerticalAlignment="Bottom">
        <TextBox
            Height="250"
            Margin="75,80,75,0"
            VerticalAlignment="Top"
            IsReadOnly="True"
            Text="{Binding TextReceived}"
            TextWrapping="Wrap" />
        <Label
            Margin="154,42,154,0"
            VerticalAlignment="Top"
            Content="MQTT Message Received"
            RenderTransformOrigin="2.77,-3.548" />
        <Button
            x:Name="BtnRecord"
            Width="142"
            Height="48"
            Margin="154,347,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{Binding ButtonColor}"
            Command="{Binding OnButtonClicked}"
            Content="{Binding ButtonText}" />
    </Grid>
</Window>

